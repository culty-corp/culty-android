<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/content_main"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            android:layout_width="337dp"
            android:layout_height="419dp"
            card_view:cardBackgroundColor="@color/corCinzaEscuro"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cardView" app:layout_constraintVertical_bias="0.31"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" card_view:srcCompat="@drawable/ic_thumb_up_orange_24dp"
            android:id="@+id/like_button"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.167"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.683" android:background="#00000000"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:contentDescription="TODO"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_thumb_down_orange_24dp"
            android:id="@+id/dislike_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.824"
            app:layout_constraintVertical_bias="0.683" android:background="#00000000"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/ic_share_orange_24dp"
            android:id="@+id/imageButton3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.683" android:background="#00000000"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <TextView
            android:text="Nome Obra"
            android:layout_width="228dp"
            android:layout_height="33dp"
            android:id="@+id/nomeObra" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.102"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:gravity="center"
            android:textColor="#D0D4E0"
            tools:text="Nome Obra" android:textColorHint="#00E91F1F"/>
    <TextView
            android:text="Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomeAutor"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:gravity="center" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.366"
            android:textColor="#D0D4E0" tools:text="Autor"/>


</android.support.constraint.ConstraintLayout>